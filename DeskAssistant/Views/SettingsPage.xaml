<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DeskAssistant.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DeskAssistant.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DeskAssistant.Models"
    xmlns:viewmodels="using:DeskAssistant.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingPageViewModel}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="PageHeader"
            Margin="36,30,36,0"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Settings" />

        <ScrollViewer
            x:Name="contentSV"
            Grid.Row="1"
            Margin="5"
            Padding="36,0,36,0"
            IsTabStop="False"
            UseSystemFocusVisuals="False"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <StackPanel Spacing="10">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="50" />
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    Margin="0,20,0,0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Appearance &amp; behavior" />

                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE790;" />

                        <StackPanel Grid.Column="1">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource BaseTextBlockStyle}"
                                Text="App theme" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="Select which app theme to display" />
                        </StackPanel>

                        <!--  ComboBox Ð´Ð»Ñ Ð²Ñ‹Ð±Ð¾Ñ€Ð° Ñ‚ÐµÐ¼Ñ‹  -->
                        <!--<ComboBox
                            x:Name="themeMode"
                            Grid.Column="2"
                            MinWidth="120"
                            AutomationProperties.AutomationId="themeModeComboBox"
                            ItemsSource="{x:Bind ViewModel.ThemeModes}"
                            SelectedItem="{x:Bind ViewModel.SelectedThemeMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->
                    </Grid>
                </Border>

                <TextBlock
                    Margin="0,20,0,0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Notifications" />
                <Expander
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    IsExpanded="False">

                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Glyph="&#xEA8F;" />

                            <StackPanel Grid.Column="1">
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Notifications settings" />
                                <TextBlock
                                    Margin="0,5,0,10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="Morning tasks notifications" />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <Grid HorizontalAlignment="Stretch">
                        <Border
                            Padding="16"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel HorizontalAlignment="Stretch" Spacing="12">

                                <!--  Ð£Ñ‚Ñ€ÐµÐ½Ð½Ð¸Ðµ ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ñ  -->
                                <ToggleSwitch
                                    Header="Morning notifications"
                                    IsOn="{Binding NotificationIsOn, Mode=TwoWay}"
                                    OffContent="Disabled"
                                    OnContent="Enabled" />

                                <!--  Ð’Ñ€ÐµÐ¼Ñ ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ð¹  -->
                                <TimePicker
                                    Margin="0,0,0,4"
                                    ClockIdentifier="24HourClock"
                                    Header="Notification time"
                                    IsEnabled="True"
                                    SelectedTime="{Binding SelectedTime}"
                                    Time="{Binding NotificationTime, Mode=TwoWay}" />

                                <!--  Ð”Ð½Ð¸ Ð½ÐµÐ´ÐµÐ»Ð¸  -->
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontWeight="SemiBold"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="Days of week" />

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <CheckBox
                                            MinWidth="80"
                                            Content="ÐŸÐ½"
                                            IsChecked="{Binding MondayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="Ð’Ñ‚"
                                            IsChecked="{Binding TuesdayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="Ð¡Ñ€"
                                            IsChecked="{Binding WednesdayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="Ð§Ñ‚"
                                            IsChecked="{Binding ThursdayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="ÐŸÑ‚"
                                            IsChecked="{Binding FridayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="Ð¡Ð±"
                                            IsChecked="{Binding SaturdayIsChecked, Mode=TwoWay}" />
                                        <CheckBox
                                            MinWidth="80"
                                            Content="Ð’Ñ"
                                            IsChecked="{Binding SundayIsChecked, Mode=TwoWay}" />
                                    </StackPanel>
                                </StackPanel>
                                <Button
                                    Margin="0,4"
                                    HorizontalAlignment="Right"
                                    Command="{Binding SaveNotificationSettingsCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Glyph="&#xE105;" />
                                        <TextBlock Text="Save" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Expander>

                <!--  Ðž Ð¿Ñ€Ð¸Ð»Ð¾Ð¶ÐµÐ½Ð¸Ð¸  -->
                <TextBlock
                    Margin="0,20,0,0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="About" />

                <Expander
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    IsExpanded="False">

                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Glyph="&#xE946;" />

                            <StackPanel Grid.Column="1">
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Desk Assistant" />
                                <TextBlock
                                    Margin="0,5,0,10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="Â© 2024 Zabrodin_DevTech. All rights reserved." />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Spacing="8">
                        <Grid
                            Padding="12"
                            Background="{ThemeResource SubtleFillColorTransparentBrush}"
                            CornerRadius="4">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Style="{StaticResource BaseTextBlockStyle}"
                                Text="To clone this repository" />
                            <Border
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4">
                                <TextBlock
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    IsTextSelectionEnabled="True"
                                    Text="git clone https://github.com/AlekseyZabrodin2/DeskAssistant" />
                            </Border>
                        </Grid>
                        <Button
                            x:Name="bugRequestButton"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="File a bug or request new sample" />
                                <FontIcon
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Glyph="&#xE8A7;" />
                            </Grid>
                        </Button>
                        <Border
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel Spacing="12">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Ð›Ð¸Ñ†ÐµÐ½Ð·Ð¸Ñ / License" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    LineHeight="18"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="THIS CODE AND INFORMATION IS PROVIDED 'AS IS' WITHOUT WARRANTY OF ANY KIND, EITHER EXPRESSED OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE IMPLIED WARRANTIES OF MERCHANTABILITY AND/OR FITNESS FOR A PARTICULAR PURPOSE."
                                    TextWrapping="Wrap" />
                                <StackPanel Spacing="4">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="ðŸ“„ ÐŸÐ¾Ð»Ð½Ñ‹Ð¹ Ñ‚ÐµÐºÑÑ‚ Ð»Ð¸Ñ†ÐµÐ½Ð·Ð¸Ð¸:" />
                                    <HyperlinkButton Content="LICENSE Ñ„Ð°Ð¹Ð» Ð² Ñ€ÐµÐ¿Ð¾Ð·Ð¸Ñ‚Ð¾Ñ€Ð¸Ð¸" NavigateUri="https://github.com/AlekseyZabrodin2/DeskAssistant/blob/main/LICENSE" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
