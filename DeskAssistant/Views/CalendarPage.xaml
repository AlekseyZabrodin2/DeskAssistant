<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DeskAssistant.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="using:DeskAssistant.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DeskAssistant.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DeskAssistant.Models"
    xmlns:viewmodels="using:DeskAssistant.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:CalendarViewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <convert:StatusColorConverter x:Key="StatusColorConverter" />
        <convert:PriorityToBrushConverter x:Key="PriorityToBrushConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="White" BorderThickness="1">
            <StackPanel>
                <CalendarView
                    x:Name="CalendarViewContainer"
                    Width="600"
                    Height="450"
                    Margin="10"
                    CalendarViewDayItemChanging="CalendarView_CalendarViewDayItemChanging"
                    FirstDayOfWeek="Monday"
                    Language="ru-Ru"
                    Loaded="CalendarView_Loaded"
                    SelectedDatesChanged="CalendarView_SelectedDatesChanged"
                    SelectionMode="Single">

                    <CalendarView.Resources>
                        <Style TargetType="CalendarViewDayItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CalendarViewDayItem">
                                        <Grid>
                                            <!--  Точка под числом  -->
                                            <Ellipse
                                                x:Name="TaskDot"
                                                Width="6"
                                                Height="6"
                                                Margin="0,0,0,4"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Fill="Red"
                                                Visibility="Collapsed" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CalendarView.Resources>
                </CalendarView>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Text="Выберите дату:" />
                    <Button Command="{Binding CreateNewTaskCommand}" Content="Добавить задачу" />
                    <Button
                        Margin="230,0,0,0"
                        Command="{Binding OpenMonthTasksCommand}"
                        Content="Задачи за месяц" />
                </StackPanel>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="2"
            BorderBrush="White"
            BorderThickness="1">
            <ListView
                BorderBrush="Gray"
                BorderThickness="1"
                DoubleTapped="ListView_DoubleTapped"
                ItemsSource="{Binding SelectedDayTasks}"
                ScrollViewer.VerticalScrollMode="Enabled"
                ShowsScrollingPlaceholders="True">
                <ListView.Header>
                    <TextBlock
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding LableForTodayTasks}" />
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,-80,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsCompleted, Mode=TwoWay}" />
                            <TextBlock
                                Width="150"
                                Margin="0,0,15,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="{Binding Priority, Converter={StaticResource PriorityToBrushConverter}}"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Width="350"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Description}"
                                TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            BorderBrush="White"
            BorderThickness="1">
            <ListView
                BorderBrush="Gray"
                BorderThickness="1"
                DoubleTapped="ListView_DoubleTapped"
                ItemsSource="{Binding WeekTasks}"
                ScrollViewer.VerticalScrollMode="Enabled"
                SelectionMode="Single"
                ShowsScrollingPlaceholders="True">
                <ListView.Header>
                    <StackPanel>
                        <TextBlock
                            Margin="0,10,0,10"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="{Binding LableForWeekTasks}" />
                        <Border
                            Margin="10,0"
                            BorderBrush="White"
                            BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Задача" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Описание" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Дата" />
                                <TextBlock
                                    Grid.Column="3"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Статус" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="{Binding Priority, Converter={StaticResource PriorityToBrushConverter}}"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Description}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding DueDateFormatted}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                Text="{Binding Status}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
