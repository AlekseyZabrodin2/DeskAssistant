<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DeskAssistant.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DeskAssistant.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DeskAssistant.Models"
    xmlns:viewmodels="using:DeskAssistant.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:CalendarViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top"  Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Margin="15,5">
            <TextBlock Text="Выберите дату:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Добавить задачу"/>
        </StackPanel>
        
        <Border BorderBrush="White" BorderThickness="1">
            <CalendarView
                Width="600"
                Height="450"
                Margin="10"
                CalendarViewDayItemChanging="CalendarView_CalendarViewDayItemChanging"
                FirstDayOfWeek="Monday"
                Language="ru-Ru"
                SelectedDatesChanged="CalendarView_SelectedDatesChanged"
                SelectionMode="Single">

                <CalendarView.Resources>
                    <Style TargetType="CalendarViewDayItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CalendarViewDayItem">
                                    <Grid>
                                        <!--  Точка под числом  -->
                                        <Ellipse
                                            x:Name="TaskDot"
                                            Width="6"
                                            Height="6"
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Fill="Red"
                                            Visibility="Collapsed" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </CalendarView.Resources>
            </CalendarView>
        </Border>
        <Border
            Grid.Row="2"
            BorderBrush="White"
            BorderThickness="1">
            <ListView
                BorderBrush="Gray"
                BorderThickness="1"
                ItemsSource="{Binding SelectedDayTasks}"
                ScrollViewer.VerticalScrollMode="Enabled"
                ShowsScrollingPlaceholders="True">
                <ListView.Header>
                    <TextBlock
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding LableForTodayTasks}" />
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <!--  Чекбокс для выполнения  -->
                            <!--
                            <CheckBox
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsCompleted}" />-->
                            <!--  Название задачи  -->
                            <TextBlock
                                Margin="10,0,10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                            <!--  Описание  -->
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            BorderBrush="White"
            BorderThickness="1">
            <ListView
                BorderBrush="Gray"
                BorderThickness="1"
                ItemsSource="{Binding WeekTasks}"
                ScrollViewer.VerticalScrollMode="Enabled"
                ShowsScrollingPlaceholders="True">
                <ListView.Header>
                    <TextBlock
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding LableForWeekTasks}" />
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <!--<CheckBox
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsCompleted}" />-->
                            <!--  Название задачи  -->
                            <TextBlock
                                Margin="10,0,10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                            <!--  Описание  -->
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
