<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DeskAssistant.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DeskAssistant.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DeskAssistant.Models"
    xmlns:viewmodels="using:DeskAssistant.ViewModels"
    d:DataContext="{d:DesignInstance viewmodels:CalendarViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="White" BorderThickness="1">
            <StackPanel Orientation="Vertical">
                <CalendarView
                    Width="600"
                    FirstDayOfWeek="Monday"
                    Language="ru-Ru" />
                <ListView />

            </StackPanel>
        </Border>
        <Border
            Grid.Column="1"
            BorderBrush="White"
            BorderThickness="1">
            <ListView />
        </Border>
    </Grid>
</Page>
